MONOREPO_GITS_RELATIVE_DIR := monorepo
MONOREPO_GITS_DEST_DIR     := $(GITS_DIRECTORY)/$(MONOREPO_GITS_RELATIVE_DIR)

MONOREPO_KUBERNETES_REPO_DEST_ROOT_DIR := $(MONOREPO_GITS_DEST_DIR)/$(MONOREPO_KUBERNETES_RELATIVE_DIR)
MONOREPO_GOCD_YAMLS_REPO_DEST_ROOT_DIR := $(MONOREPO_GITS_DEST_DIR)/$(MONOREPO_GOCD_YAMLS_RELATIVE_DIR)

clean_monorepo_gits:
	rm -rf $(MONOREPO_GITS_DEST_DIR)

_monorepo_kubernetes:
	rm -rf $(MONOREPO_KUBERNETES_REPO_DEST_ROOT_DIR).git
	mkdir -p $(MONOREPO_KUBERNETES_REPO_DEST_ROOT_DIR).git

	./git-bootstrap.sh \
		$(MONOREPO_KUBERNETES_DEST_ROOT_DIR) \
		$(MONOREPO_KUBERNETES_REPO_DEST_ROOT_DIR).git

_monorepo_gocd_yamls:
	rm -rf $(MONOREPO_GOCD_YAMLS_REPO_DEST_ROOT_DIR).git
	mkdir -p $(MONOREPO_GOCD_YAMLS_REPO_DEST_ROOT_DIR).git

	./git-bootstrap.sh \
		$(MONOREPO_GOCD_YAMLS_DEST_ROOT_DIR) \
		$(MONOREPO_GOCD_YAMLS_REPO_DEST_ROOT_DIR).git

giterize_all_monorepos_git_repos: _monorepo_kubernetes _monorepo_gocd_yamls
